<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    style="@style/LinearLayoutStyle"
    tools:context="com.example.nataliia.pr_1.MainActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView"
        style="@style/ScrollViewStyle">

        <LinearLayout
            android:id="@+id/linear_sub_layout"
            style="@style/LinearLayoutStyle">

            <TextView
                android:id="@+id/title"
                style="@style/MainTitleStyle"
                android:tag="title_textview"
                android:text="@string/main_title" />

            <TextView
                android:id="@+id/state"
                style="@style/MainStateStyle"
                android:tag="state_textview"
                android:text="@string/main_state" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/table_layout"
                style="@style/TableLayoutStyle">

                <View
                    android:id="@+id/view1"
                    style="@style/ViewStyle"
                    android:tag="view1" />

                <TableRow
                    android:id="@+id/table_row_1"
                    style="@style/TableRowStyle"
                    android:baselineAligned="false">

                    <TextView
                        android:id="@+id/text_view_1_1"
                        style="@style/FieldTextViewStyle"
                        android:tag="text_view_1_1"
                        android:text="@string/field_1" />

                    <TextView
                        android:id="@+id/text_view_1_2"
                        style="@style/StateTextViewStyle"
                        android:tag="text_view_1_2"
                        android:text="@string/state_1" />
                </TableRow>

                <View
                    android:id="@+id/view2"
                    style="@style/ViewStyle"
                    android:tag="view2" />

                <TableRow
                    android:id="@+id/table_row_2"
                    style="@style/TableRowStyle">

                    <TextView
                        android:id="@+id/text_view_2_1"
                        style="@style/FieldTextViewStyle"
                        android:tag="text_view_2_1"
                        android:text="@string/field_2" />

                    <TextView
                        android:id="@+id/text_view_2_2"
                        style="@style/StateTextViewStyle"
                        android:tag="text_view_2_2"
                        android:text="@string/state_2" />
                </TableRow>

                <View
                    android:id="@+id/view3"
                    style="@style/ViewStyle"
                    android:tag="view3" />

                <TableRow
                    android:id="@+id/table_row_3"
                    style="@style/TableRowStyle">

                    <TextView
                        android:id="@+id/text_view_3_1"
                        style="@style/FieldTextViewStyle"
                        android:tag="text_view_3_1"
                        android:text="@string/field_3" />

                    <TextView
                        android:id="@+id/text_view_3_2"
                        style="@style/StateTextViewStyle"
                        android:tag="text_view_3_2"
                        android:text="@string/state_3" />
                </TableRow>

                <View
                    android:id="@+id/view4"
                    style="@style/ViewStyle"
                    android:tag="view4" />

                <TableRow
                    android:id="@+id/table_row_4"
                    style="@style/TableRowStyle">

                    <TextView
                        android:id="@+id/text_view_4_1"
                        style="@style/FieldTextViewStyle"
                        android:tag="text_view_4_1"
                        android:text="@string/field_4" />

                    <TextView
                        android:id="@+id/text_view_4_2"
                        style="@style/StateTextViewStyle"
                        android:tag="text_view_4_2"
                        android:text="@string/state_4" />
                </TableRow>

                <View
                    android:id="@+id/view5"
                    style="@style/ViewStyle"
                    android:tag="view5" />

                <TextView
                    android:id="@+id/text"
                    style="@style/TextStyle"
                    android:tag="text_textview"
                    android:text="@string/text" />
            </TableLayout>

            <android.support.v7.widget.RecyclerView
                style="@style/RecyclerViewStyle"
                android:id="@+id/recycler_view"
                android:tag="recycler_view"/>

        </LinearLayout>
    </ScrollView>

    <!-- [Comment] Please use dimens to support different screen sizes. Not layouts -->
</LinearLayout>
