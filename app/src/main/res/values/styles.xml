<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorLighterGray</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/colorBlue</item>
    </style>

    <style name="ScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:stretchColumns">1</item>
    </style>

    <style name="TableLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:stretchColumns">1</item>
    </style>

    <style name="TableRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FieldTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/divider_padding</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/field_font_size</item>
        <item name="android:layout_marginLeft">@dimen/text_padding_left</item>
    </style>

    <style name="StateTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">@dimen/divider_padding</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/field_font_size</item>
        <item name="android:layout_marginRight">@dimen/text_padding_right</item>
    </style>

    <style name="ViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginBottom">@dimen/divider_padding_bottom</item>
        <item name="android:layout_marginTop">@dimen/divider_padding_top</item>
        <item name="android:layout_marginLeft">@dimen/divider_padding_left</item>
        <item name="android:layout_marginRight">@dimen/divider_padding_right</item>
        <item name="android:background">@color/colorLightGray</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:layout_marginLeft">@dimen/text_left_padding</item>
        <item name="android:textSize">@dimen/text_font_size</item>
        <item name="android:textColor">@color/colorBlack</item>

    </style>

    <style name="MainTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/main_title_padding</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/main_title_font_size</item>
    </style>

    <style name="MainStateStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:padding">@dimen/main_state_padding</item>
        <item name="android:background">@drawable/orange_ellipse</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/main_state_font_size</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:scrollbars">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
